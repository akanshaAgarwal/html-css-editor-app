<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cvCard"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintVertical_bias="0.0"
    tools:layout_constraintRight_creator="1"
    tools:layout_constraintLeft_creator="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="72dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clCardView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/project_icon_for_home_activity_sec"
                android:id="@+id/ivProject"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvProjectName"
                tools:text="Project 1"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/ivProject"
                app:layout_constraintLeft_toRightOf="@+id/ivProject"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFilesNumber"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                tools:text="0 Files"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tvProjectName"
                app:layout_constraintTop_toBottomOf="@+id/tvProjectName"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintRight_toRightOf="@+id/tvProjectName"
                app:layout_constraintHorizontal_bias="0.0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete_black_24dp"
                android:id="@+id/ivDelete"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>